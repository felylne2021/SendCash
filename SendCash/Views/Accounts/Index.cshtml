@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/DataTables/css/dataTables.bootstrap.css">
<script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>
<script type="text/javascript" src="~/Content/DataTables/js/dataTables.bootstrap.js"></script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover" id="accountTable">
    <thead>
        <tr>
            <th></th>
            <th>
                Name
            </th>
            <th>
                Account Number
            </th>
            <th>
                Bank Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>

</table>

<script type="text/javascript">

    $(document).ready(function () {
        var accountDT = $('#accountTable ').DataTable({
            ajax: {
                url: "api/Accounts",
                dataSrc: ""
            },
            columns: [
                {
                    data: "AccountName"
                },
                {
                    data: "AccountNumber"
                },
                {
                    data: "BankName"
                },
                {
                    data: "AccountId",
                    render: function (data) {
                        return "<button data-customer-id=" + data + " class='btn-danger js-delete'>Delete</button>";
                    }
                }
            ]
        });
        
        $("#accountTable").on("click", ".js-delete", function () {
            var button = $(this);
            bootbox.confirm("This account will be permanently deleted. Procees?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            accountDT.row(button.parents("tr")).remove().draw();
                        }
                    });
                }
            });

        });
    });
</script>