<!-- Modal -->
<div id="addFormModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="closeForm">&times;</button>
                <h4 class="modal-title">Add Account</h4>
            </div>
            <div class="modal-body">
                <form id="addAccountForm">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            <b class="control-label col-md-4">Account Number</b>
                            <div class="col-md-8">
                                <input class="form-control" id="accNum" placeholder="Input Account Number" required />
                                <div id="validAccNum" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <b class="control-label col-md-4">Account Name</b>
                            <div class="col-md-8">
                                <input class="form-control" id="accName" placeholder="Input Account Name" required />
                                <div id="validAccName" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <b class="control-label col-md-4">Bank Name</b>
                            <div class="col-md-8">
                                <select name="banks" id="banks" class="form-control" required>
                                </select>
                                <div id="validBank" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <b class="control-label col-md-4">Account Balance</b>
                            <div class="col-md-8">
                                <input class="form-control" id="accBal" placeholder="Input Initial Balance" required />
                                <div id="validAccBal" class="text-danger"></div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-default" data-dismiss="modal" id="closeForm">Close</button>

                        <input type="button" value="Create" class="btn btn-success" id="saveAccount" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>