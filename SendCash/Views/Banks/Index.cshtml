@model IEnumerable<SendCash.Models.Bank>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/DataTables/css/dataTables.bootstrap.css">
<script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>
<script type="text/javascript" src="~/Content/DataTables/js/dataTables.bootstrap.js"></script>
<script type="text/javascript" src="~/Scripts/ViewScripts/Banks.js"></script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover" id="bankTable">
    <thead>
        <tr>
            <th class="col-md-1">
                No.
            </th>
            <th class="col-md-9">
                Bank Name
            </th>

            <th class="col-md-2"></th>
        </tr>
    </thead>

    <tbody>
    </tbody>
</table>

<!-- Modal -->
<div id="viewDetailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Bank Details</h4>
            </div>
            <div class="modal-body">
                <form id="viewBankDetailsForm">
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            <b class="control-label col-md-4">Bank Name</b>
                            <div class="col-md-8">
                                <input class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <b class="control-label col-md-4">Bank Phone Number</b>
                            <div class="col-md-8">
                                <input class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <b class="control-label col-md-4">Bank Address</b>
                            <div class="col-md-8">
                                <input class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-default" data-dismiss="modal" id="closeForm">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
